<div class="container-fluid" id="search">
  <div class="row">
    <div class="col-sm-3"></div>

    <div class="col-sm-6">
      <div class="form-group input-group">

        <%= search_form_for @q, url: welcome_index_path, html: { method: :get } do |f| %>

          <%= f.search_field :title_or_description_cont, class: "form-control", id: "search-field" %>

          <%= button_tag type: 'submit', class: "btn btn-default btn-block", id: "submit-button" do %>
            <i class="fa fa-search"></i>
          <% end %>

          <%= link_to request.path, class: "btn btn-default btn-block", id: "refresh-button" do %> 
            <i class="fa fa-refresh"></i>
          <% end %>
        <% end %>
          <!--<input type="text" class="form-control">
          <span class="input-group-btn">
              <button class="btn btn-default" type="button"><i class="fa fa-search"></i>
              </button>
          </span>-->
      </div>
    </div>
  </div>
</div>

<% if @ads.size > 0 %>
  <div class="panel-group col-sm-3">
    <div class="panel panel-primary">
      <% @ads.each do |ad| %>
        <div class="panel-heading">
          <%= ad.title %>
        </div>
        <div class="panel-body">
          <%= ad.description %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>