<h1>Services</h1>

<div class="panel panel-default">
    <div class="panel-heading">
      <%= search_form_for @q, url: services_path, html: { method: :get } do |s| %>
        <div class="row">
          <div class="col-lg-5">
            <div class="input-group input-group-sm">
              <%= s.search_field :name_or_description_cont, class: "form-control", placeholder: "Nome ou Descrição" %>
              <span class="input-group-btn input-group-sm">
                <%= button_tag type: 'submit', class: "btn btn-success" do %>
                <i class="fa fa-search"></i>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
        
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @services.each do |service| %>
                <tr>
                  <td><%= service.name %></td>
                  <td><%= service.description %></td>
                  <td><%= humanized_money_with_symbol(service.price) %></td>
                  <td class="col-md-2"><%= link_to edit_service_path(service), class: "btn btn-outline btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                    <%= link_to service_path(service), method: :delete, class: "btn btn-outline btn-danger btn-circle", data: { confirm: 'Are you sure?' } do %> <i class="fa fa-minus"></i><% end %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <br>

        <%= link_to 'New Service', new_service_path, class: "btn btn-outline btn-primary" %>
    </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @services %>
  </div>
</div>
