<h1><%= @campaigns.model_name.human.pluralize %></h1>

<div class="panel panel-default">
    <div class="panel-heading"></div>
<!-- /.panel-heading -->
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= @campaigns.human_attribute_name("title") %></th>
              <th><%= @campaigns.human_attribute_name("body") %></th>
              <th><%= @campaigns.human_attribute_name("user") %></th>
              <th><%= t('helpers.submit.actions') %></th>
            </tr>
          </thead>

          <tbody>
            <% @campaigns.each do |campaign| %>
              <tr>
                <td><%= campaign.title %></td>
                <td><%= campaign.body %></td>
                <td><%= campaign.user.name %></td>
                <td class="col-md-2"><%= link_to edit_campaign_path(campaign), class: "btn btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                    <%= link_to campaign_path(campaign), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: t('confirm') } do %> <i class="fa fa-minus"></i> <% end %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <br>

      <%= link_to t('actions.new(a)', model: @campaigns.model_name.human), new_campaign_path, class: "btn btn-primary" %>
    </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @campaigns %>
  </div>
</div>
