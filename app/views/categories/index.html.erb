<h1><%= @categories.model_name.human.pluralize %></h1>

<div class="panel panel-default">
  <div class="panel-heading"> </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= @categories.human_attribute_name("name") %></th>
            <th><%= @categories.human_attribute_name("user") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.user %></td>
              <td class="col-md-2"><%= link_to edit_category_path(category), class: "btn btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                <%= link_to category_path(category), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: t('confirm') } do %> <i class="fa fa-minus"></i><% end %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br> 

      <%= link_to t('actions.new(a)', model: @categories.model_name.human), new_category_path, class: "btn btn-primary" %> 
 
    </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @categories %>
  </div>
</div>