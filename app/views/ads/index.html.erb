<h1>Ads</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= search_form_for @q, url: ads_path, html: { method: :get } do |a| %>
      <div class="row">
        <div class="col-lg-5">
          <div class="input-group input-group-sm">
            <%= a.search_field :title_or_description_cont, class: "form-control", placeholder: "Titulo ou Descrição" %>
            <span class="input-group-btn input-group-sm">
              <%= button_tag type: 'submit', class: "btn btn-success" do %>
              <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    <% end %>    
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
      <div class="table-responsive">

        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>User</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @ads.each do |ad| %>
              <tr>
                <td><%= ad.title %></td>
                <td><%= ad.description %></td>
                <td><%= ad.user.name %></td>

                <% if policy(current_user).edit? %>
                  <td class="col-md-2"><%= link_to edit_ad_path(ad), class: "btn btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                <% end %>

                <%= link_to ad_path(ad), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: 'Are you sure?' } do %> <i class="fa fa-minus"></i> <% end %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>

      <%= link_to 'New Ad', new_ad_path, class: "btn btn-primary"  %>
  </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @ads %>
  </div>
</div>

