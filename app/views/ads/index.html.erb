<h1>Ads</h1>

<div class="panel panel-default">
  <div class="panel-heading">
      
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
      <div class="table-responsive">

        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>User</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @ads.each do |ad| %>
              <tr>
                <td><%= ad.title %></td>
                <td><%= ad.description %></td>
                <td><%= ad.user.name %></td>

                <% if policy(current_user).edit? %>
                  <td class="col-md-2"><%= link_to edit_ad_path(ad), class: "btn btn-outline btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                <% end %>

                <%= link_to ad_path(ad), method: :delete, class: "btn btn-outline btn-danger btn-circle", data: { confirm: 'Are you sure?' } do %> <i class="fa fa-minus"></i> <% end %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>

      <%= link_to 'New Ad', new_ad_path, class: "btn btn-outline btn-primary"  %>
  </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @ads %>
  </div>
</div>

