<h1>Customers</h1>
<div class="panel panel-default">
    <div class="panel-heading">
      <%= search_form_for @q, url: customers_path, html: { method: :get } do |c| %>
        <div class="row">
          <div class="col-lg-5">
            <div class="input-group input-group-sm">
              <%= c.search_field :name_or_cpf_cont, class: "form-control" %>
              <span class="input-group-btn input-group-sm">
                <%= button_tag type: 'submit', class: "btn btn-success" do %>
                <i class="fa fa-search"></i>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Cpf</th>
                  <th>User</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% @customers.each do |customer| %>
                  <tr>
                    <td><%= customer.name %></td>
                    <td><%= customer.cpf %></td>
                    <td><%= customer.user.name %></td>

                    <td class="col-md-2"><%= link_to edit_customer_path(customer), class: "btn btn-outline btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                    <%= link_to customer_path(customer), method: :delete, class: "btn btn-outline btn-danger btn-circle", data: { confirm: 'Are you sure?' } do %> <i class="fa fa-minus"></i> <% end %> </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>

        <br>

        <%= link_to 'New Customer', new_customer_path, class: "btn btn-outline btn-primary" %>
    </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @customers %>
  </div>
</div>
