<h1>Books</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Description</th>
                <th>Status</th>
                <th>User</th>
                <th>Customer</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= book.description %></td>
                  <td><%= book.status %></td>
                  <td><%= book.user.name %></td>
                  <td><%= book.customer.name %></td>
                  <td class="col-md-2"><%= link_to edit_book_path(book), class: "btn btn-outline btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                    <%= link_to book_path(book), method: :delete, class: "btn btn-outline btn-danger btn-circle", data: { confirm: 'Are you sure?' } do %> <i class="fa fa-minus"></i><% end %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <br>

        <%= link_to 'New Book', new_book_path, class: "btn btn-outline btn-primary" %>
    </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @books %>
  </div>
</div>