<h1>Books</h1>

<div class="panel panel-default">
    <div class="panel-heading">
      <%= form_tag(books_path, method: :get, html: {class: "form-inline"}) do %>
        <div class="row">
          <div class="col-lg-3">
            <div class="input-group input-group-sm">
              <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
              <%= text_field_tag :initialdate, params[:initialdate], class: "form-control", placeholder: "Data Inicial" %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="input-group input-group-sm">
              <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
              <%= text_field_tag :finaldate, params[:finaldate], class: "form-control", placeholder: "Data Final" %>
            </div>
          </div>
          <div class="col-lg-3">
            <%= button_tag type: 'submit', class: "btn btn-success btn-sm" do %>
            <i class="fa fa-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>
        
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Description</th>
                <th>Status</th>
                <th>Schedule</th>
                <th>Customer</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= book.description %></td>
                  <td><%= book.status %></td>
                  <td><%= book.schedule %></td>
                  <td><%= book.customer.name %></td>
                  <td class="col-md-2"><%= link_to edit_book_path(book), class: "btn btn-outline btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                    <%= link_to book_path(book), method: :delete, class: "btn btn-outline btn-danger btn-circle", data: { confirm: 'Are you sure?' } do %> <i class="fa fa-minus"></i><% end %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <br>

        <%= link_to 'New Book', new_book_path, class: "btn btn-outline btn-primary" %>
    </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @books %>
  </div>
</div>

