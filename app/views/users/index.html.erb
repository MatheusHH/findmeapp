<h1><%= @users.model_name.human.pluralize %></h1>

<div class="panel panel-default">
    <div class="panel-heading">
        
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th><%= @users.human_attribute_name("name") %></th>
                        <th><%= @users.human_attribute_name("role") %></th>
                        <th><%= t('helpers.submit.actions') %></th>
                    </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.role %></td>
                        <td class="col-md-2"><%= link_to edit_user_path(user), class: "btn btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                        <%= link_to user_path(user), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: t('confirm') } do %> <i class="fa fa-minus"></i> <% end %> </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        <br>

        <%= link_to t('actions.new', model: @users.model_name.human), new_user_path, class: "btn btn-primary" %>
    </div>
</div>

<div class="row">
  <div class="text-center">
    <%= paginate @users %>
  </div>
</div>


