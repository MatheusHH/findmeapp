<h1>Budgets</h1>

<div class="panel panel-default">
    <div class="panel-heading">
      <%= search_form_for @q, url: budgets_path, html: { method: :get } do |b| %>
      <div class="row">
        <div class="col-lg-5">
          <div class="input-group input-group-sm">
            <%= b.search_field :customer_name_or_customer_cpf_cont, class: "form-control", placeholder: "Titulo ou Descrição" %>
            <span class="input-group-btn input-group-sm">
              <%= button_tag type: 'submit', class: "btn btn-success" do %>
              <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    <% end %>  
        
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Customer</th>
                <th>Duedate</th>
                <th>Totalprice</th>
                <th>Discount</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @budgets.each do |budget| %>
                <tr>
                  <td><%= budget.customer.name %></td>
                  <td><%= budget.duedate %></td>
                  <td><%= budget.totalprice %></td>
                  <td><%= budget.discount %></td>
                  <td class="col-md-2"><%= link_to edit_budget_path(budget), class: "btn btn-outline btn-info btn-circle" do %> <i class="fa fa-edit"></i><% end %>
                    <%= link_to budget_path(budget), method: :delete, class: "btn btn-outline btn-danger btn-circle", data: { confirm: 'Are you sure?' } do %> <i class="fa fa-minus"></i><% end %> 
                    <%= link_to budget_path(budget, format: :pdf), class: "btn btn-outline btn-warning btn-circle" do %> <i class="fa fa-file-pdf-o"></i><% end %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <br>

        <%= link_to 'New Budget', new_budget_path, class: "btn btn-outline btn-primary" %>
    </div>
</div>
